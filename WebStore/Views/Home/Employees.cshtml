@model IEnumerable<WebStore.Models.Employee>
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

<!DOCTYPE html>

<html style="height:100%">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employees</title>
</head>
<body style="display:flex; flex-direction:column; box-sizing:border-box; height:100%; margin:0">
    <div>
        <h1 align="center">Сотрудники</h1>
    </div>
    <div style="flex-grow:1; width:auto; height:auto">
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Возраст</th>
                    <th>Подробности</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.LastName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.Patronymic</td>
                        <td>@employee.Age</td>
                        <td><a asp-action="Details" asp-route-id="@employee.Id">Детали</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <div style="display:inline-block; margin:0 auto; text-align:center">
            <div style="text-align:center; margin:0 auto; display:inline; height:auto; width:auto">
                <a href="~/Home/Index">Главная</a>
            </div>
            <div style="text-align:center; margin:0 auto; display:inline; height:auto; width:auto">
                <a href="#">Сотрудники</a>
            </div>
        </div>
    </div>
    <div style="display:block; text-align:center; height:auto;">
        <p>&copy;@DateTime.Now.DayOfYear</p>
    </div>
</body>
</html>
